<section class="modal-rendered">
    <div class="modal" id="modal">      
      <div class="card-div" 
            ><img
              class="movie-poster"
              src='https://image.tmdb.org/t/p/w500/{{poster_path}}'
              alt="title"
              loading="lazy"
              data-video='videoId'
          />
      </div>
      <div class="info-modal">        
        <h2 class="card-title">{{title}}</h2>
        <table class="info-block">
          <tbody>
            <tr>
              <td class="list-keys">Vote / Votes</td>
              <td class="list-values">
                <span class="vote-span">{{vote_average}}</span> / <span class="votes-count">{{vote_count}}</span>
              </td>
            </tr>
            <tr>
              <td class="list-keys">Popularity</td>
              <td class="list-values">{{popularity}}</td>
            </tr>
            <tr>
              <td class="list-keys">Original Title</td>
              <td class="list-values">{{original_title}}</td>
            </tr>
            <tr>
              <td class="list-keys">Genres</td>
              <td class="list-values">{{genres}}</td>
            </tr>
          </tbody>
        </table>

        <p class="info-about">About</p>
            <p class="info-overview">{{overview}}</p>

           <div class="buttons" id={{id}}>
              <button type="submit" name="addWatched" id="{{id}}" class="button-watched btn" data-card='"id" : "{{id}}", "poster_path" : "{{poster_path}}", "title" : "{{title}}", "genre_ids" : "{{genres}}", "relesedate" : "{{release_date}}", "vote_average" : "{{vote_average}}", "overview" : "{{overview}}", "list" : "watched"'>Add to watched</button>
              <button type="submit" name="addFavorite" id="{{id}}" class="button-queue btn" data-card='"id" : "{{id}}", "poster_path" : "{{poster_path}}", "title" : "{{title}}", "genre_ids" : "{{genres}}", "relesedate" : "{{release_date}}", "vote_average" : "{{vote_average}}", "overview" : "{{overview}}", "list" : "favorite"'>Add to queue</button>
            </div>  
